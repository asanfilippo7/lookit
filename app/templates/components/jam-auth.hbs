<form submit={{action "authenticate"}}>
<div>
  <div>
    <label>Namespace</label>
    {{input value=namespace class="form-control" type="text"}}
  </div>

  <div>
    <label>Collection</label>
    {{input value=collection class="form-control" type="text"}}
  </div>
</div>

<label>Username</label>
{{input value=username class="form-control" type="text"}}
<label>Password</label>
{{input value=password class="form-control" type="password"}}
<br>
<button {{action "authenticate"}} >Login</button>
</form>